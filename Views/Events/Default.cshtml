@model IEnumerable<CLD111POETerm1ST10484249.Repository.Models.Event>

@{
    Layout = "_LayoutAdmin";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-action">
                Events
            </div>
            <div class="card-content">
                <div class="table-responsive">
                    <div class="card-body">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>

                                    <th>
                                        Event
                                    </th>

                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Status
                                    </th>

                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EventName)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.EventType.TypeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EventStartDate)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.EventEndDate)
                                        </td>


                                        <td>
                                            <a class="waves-effect waves-light btn" asp-action="Edit" asp-route-id="@item.EventId"><i class="material-icons">mode_edit</i></a> |

                                            <a class="waves-effect waves-light btn" asp-action="Delete" asp-route-id="@item.EventId"><i class="material-icons">delete</i></a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>