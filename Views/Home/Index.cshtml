<main id="main">

    <!--==========================
      About Section
    ============================-->
    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h2>About EventEase</h2>
                    <p>
                       We are the best in the industry
                    </p>
                </div>
                <div class="col-lg-3">
                    <h3>Where are we</h3>
                    <p>Johannesburg South Africa</p>
                </div>
                <div class="col-lg-3">
                    <h3>Our Object</h3>
                    <p>To Provide our customer with World class Service</p>
                </div>
            </div>
        </div>
    </section>

    <section id="contact" class="section-bg wow fadeInUp">
    <div class="container-fluid venue-gallery-container">
        <div class="row no-gutters">

                @if (Model?.veneuImages != null && Model.veneuImages.Any())
            {
                foreach (var image in Model.veneuImages)
                {
                    <div class="col-lg-3 col-md-4">
                        <div class="venue-gallery">
                            <a href="@image.ImageUrl" class="venobox" data-gall="venue-gallery">
                                <img src="@image.ImageUrl" class="img-fluid rounded" alt="Venue Image">
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No images available for venues yet.</p>
            }
        </div>
    </div>
    </section>

</main>